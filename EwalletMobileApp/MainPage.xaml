<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EwalletMobileApp.MainPage">

    <ContentPage.Resources>
        <Color x:Key="BgColor">#131313</Color>
        <Color x:Key="Primary">#4c4aef</Color>
        <Color x:Key="Secondary">#bcbbf9</Color>
    </ContentPage.Resources>

    <Grid x:Name="Container" BackgroundColor="{StaticResource BgColor}" >
        
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="0.7*" />
        </Grid.RowDefinitions>

        <!-- Nested Grid for the first row -->
        <Grid Grid.Row="0">
            <BoxView Color="{StaticResource Secondary}" BackgroundColor="{StaticResource BgColor}" CornerRadius="0,0,30,30"/>
        </Grid>

       
    </Grid>
</ContentPage>
